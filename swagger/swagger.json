{
    "swagger": "2.0",
    "info": {
        "title": "Go.Chat",
        "description": "API Go.Chat",
        "version": "1.0.0"
    },
    "host": "localhost:3002",
    "basePath": "/",
    "schemes": [
        "http"
    ],
    "paths": {
        "/gochat/users": {
            "post": {
                "description": "Criar utilizador",
                "parameters": [{
                        "name": "username",
                        "in": "formData",
                        "description": "Intrduza o nome de utilizador pretendido.",
                        "required": true,
                        "type": "string"

                    },
                    {
                        "name": "name",
                        "in": "formData",
                        "description": "Introduza o seu nome.",
                        "required": true,
                        "type": "string"

                    },
                    {
                        "name": "email",
                        "in": "formData",
                        "description": "Introduza o seu email.",
                        "required": true,
                        "type": "string"

                    },
                    {
                        "name": "password",
                        "in": "formData",
                        "description": "Introduza a password pretendida.",
                        "required": true,
                        "type": "string"

                    },
                    {
                        "name": "verified",
                        "in": "formData",
                        "description": "Verifique o email.",
                        "type": "boolean"

                    },
                    {
                        "name": "roles",
                        "in": "formData",
                        "description": "Introduza os roles do utilizador.",
                        "type": "array",
                        "items": {
                            "type": "string",
                            "enum": [
                                "Admin",
                                "Moderator",
                                "Leader",
                                "Owner",
                                "user",
                                "bot",
                                "guest",
                                "anonymous",
                                "Livechat Agent",
                                "Livechat Manager"
                            ],
                            "default": "user",

                            "collectionFormat": "ssv"
                        },
                        "minLength": 0,
                        "maxLength": 10

                    },
                    {
                        "name": "joinDefaultChannels",
                        "in": "formData",
                        "description": "O utilizador é adicionado aos canais predefinidos.",
                        "type": "boolean"

                    },
                    {
                        "name": "requirePasswordChange",
                        "in": "formData",
                        "description": "Necesário alteração de palavra-passe.",
                        "type": "boolean"

                    },
                    {
                        "name": "sendWelcomeEmail",
                        "in": "formData",
                        "description": "Enviar email de boas vindas.",
                        "type": "boolean"

                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created "
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "406": {
                        "description": "Not Acceptable"
                    },
                    "409": {
                        "description": "Conflict"
                    },
                    "500": {
                        "description": "Something went wrong"
                    }
                }
            }
        }

    }
}